{
  "name": "pomodoro",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "http://localhost:5173",
  "node-remote": "http://localhost:5173",
  "scripts": {
    "postinstall": "base-volta-off-of-nwjs",
    "dev": "concurrently -k npm:dev:vite npm:dev:nwjs",
    "dev:vite": "vite dev",
    "dev:nwjs": "wait-on -c waitOn.config.json http-get://localhost:5173 && nw .",
    "bld":"npm run bld:vite && npm run bld:nwjs",
    "bld:vite": "tsc -b && vite build --outDir=./dist/website",
    "bld:nwjs": "nwbuild --mode=build --cacheDir=./node_modules/nw --outDir=./dist/desktop --managedManifest=./package.nw.json --logLevel=debug './package.json ./dist/website/**/*'",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@nwutils/cli": "^0.0.1",
    "@nwutils/updater": "^0.3.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "base-volta-off-of-nwjs": "^1.0.5",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "nw": "^0.97.0",
    "nw-builder": "^4.13.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.2",
    "vitest": "^3.0.8",
    "wait-on": "^8.0.3"
  },
  "volta": {
    "node": "23.3.0"
  }
}
